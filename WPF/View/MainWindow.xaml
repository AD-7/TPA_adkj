<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.ViewModel"       
        mc:Ignorable="d"
        Title="DLL Browser- A.D.K.J." Height="350" Width="525">
    <Grid>
        <TreeView ItemsSource="{Binding TV}" HorizontalAlignment="Left" Height="220" Margin="65,25,0,0" VerticalAlignment="Top" Width="410">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding Path=Name}" Margin="0,0,4,0" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>


        <Button Content="Load file" Command="{Binding LoadClicked}" HorizontalAlignment="Left" Margin="200,270,0,0" VerticalAlignment="Top" Width="125" Height="41"/>


    </Grid>

</Window>
